generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // No URL here anymore - it's in prisma.config.ts
}

// User model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

